{
  "name": "lerna-demo",
  "private": true,
  "scripts": {
    "spawn": "npm install && npm start",
    "start": "node_modules/.bin/lerna bootstrap && lerna run build",
    "bootstrap": "node_modules/.bin/lerna bootstrap",
    "clean": "npm run clean:lerna && npm run clean:root",
    "clean:lerna": "node_modules/.bin/lerna clean --yes",
    "clean:root": "npx rimraf node_modules"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "devDependencies": {
    "commitizen": "^4.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "lerna": "^3.20.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
